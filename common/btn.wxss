.btn {
  position: relative;
  display: inline-block;
  padding: 0 40rpx;
  height: 90rpx;
  line-height: 90rpx;
  overflow: hidden;
  text-align: center;
  border-radius: 6rpx;
  background-color: #fff;
  box-sizing: border-box;
}

