.btn-primary {
  color: #fff;
  background-color: #ff7b04;
}

.btn-danger {
  background-color: #ff6364;
}

.btn-warning {
  color: #fff;
  background-color: #ea831f;
}

.btn-sm {
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.btn-sm.btn-outline {
  line-height: 42rpx;
}

.btn-lg {
  height: 95rpx;
  line-height: 95rpx;
  font-size: 36rpx;
}

.btn-outline {
  border: 1px solid #626262;
  background: none;
}

.btn-outline-primary {
  border-color: #ff7b04;
  color: #ff7b04;
}

.btn-outline-white {
  border-color: #fff;
  color: #fff;
}

.btn-block {
  display: block;
  width: 100%;
  padding: 0;
}

.btn-no-radius {
  border-radius: 0;
}

.btn-round {
  border-radius: 50rpx;
}

.btn-gradient:after {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(transparent, rgba(0, 0, 0, .1));
  content: "";
}

.btn.disabled {
  color: #fff !important;
  background: #bfbfbf !important;
  pointer-events: none;
}